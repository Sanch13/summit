[flake8]
########## Formatting ##########
format = default
count = True
show-source = True
statistics = True

################### FILE PATTERNS ##########################
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    venv,

filename =
    *.py

########## Options ##########
max-line-length = 100
max-complexity = 10

per-file-ignores =
    __init__.py:F401,F403
